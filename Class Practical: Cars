        "class Car:\n",
        "  def __init__(self, model, year):\n",
        "    self.model = model\n",
        "    self.year = year\n",
        "    self.miles_driven = 0\n",
        "\n",
        "  def drive(self):\n",
        "    self.miles_driven += 1\n",
        "    print(\"vroom\")\n",
        "\n",
        "  def info(self):\n",
        "    print(f'The car has driven {self.miles_driven} miles. Model Name: {self.model}. Year: {self.year}')\n",
        "\n",
        "\n"
      ]
